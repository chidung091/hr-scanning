    @vite(['resources/css/app.css', 'resources/js/app.js'])
    @stack('dumper')
  </head>
  <body class="min-h-screen bg-gray-50 font-sans">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <a href="/" class="text-2xl font-bold text-primary-600">TechVision</a>
            </div>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/" class="text-gray-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium">Home</a>
              <a
                href="/#about"
                class="text-gray-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium"
              >About</a>
              <a
                href="/#culture"
                class="text-gray-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium"
              >Culture</a>
              <a href="/careers" class="text-primary-600 bg-primary-50 px-3 py-2 rounded-md text-sm font-medium">Careers</a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-primary-50 to-blue-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Join Our
            <span class="text-primary-600">Team</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Discover exciting career opportunities at TechVision Solutions. We're looking for talented individuals 
            who are passionate about technology and want to make a meaningful impact.
          </p>
          @if(jobs.length > 0)
            <p class="text-lg text-gray-700 font-medium">
              {{ jobs.length }} {{ jobs.length === 1 ? 'position' : 'positions' }} currently available
            </p>
          @else
            <p class="text-lg text-gray-700">
              No positions currently available. Check back soon!
            </p>
          @endif
        </div>
      </div>
    </div>

    <!-- Jobs List -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      @if(jobs.length > 0)
        <div class="grid gap-6 md:gap-8">
          @each(job in jobs)
            <div class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow duration-200">
              <div class="p-6 md:p-8">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                  <div class="flex-1">
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">
                      {{ job.jobTitle }}
                    </h2>

                    <div class="flex flex-wrap gap-4 text-sm text-gray-600 mb-4">
                      @if(job.workLocation)
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            />

                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                            />

                          </svg>
                          {{ job.workLocation }}
                        </span>
                      @endif
                      
                      @if(job.workingTime)
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            />

                          </svg>
                          {{ job.workingTime }}
                        </span>
                      @endif
                      
                      @if(job.salaryRange)
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                            />

                          </svg>
                          {{ job.salaryRange }}
                        </span>
                      @endif
                      
                      @if(job.numberOfEmployees > 1)
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            />

                          </svg>
                          {{ job.numberOfEmployees }} positions
                        </span>
                      @endif
                    </div>

                    @if(job.requirements)
                      <p class="text-gray-600 mb-4 line-clamp-3">
                        {{ job.requirements.substring(0, 200) }}{{ job.requirements.length > 200 ? '...' : '' }}
                      </p>
                    @endif
                  </div>

                  <div class="mt-4 md:mt-0 md:ml-6">
                    <a
                      href="/jobs/{{ job.id }}"
                      class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition duration-200"
                    >
                      View Details & Apply
                    </a>
                  </div>
                </div>
              </div>
            </div>
          @endeach
        </div>
      @else
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <svg
              class="mx-auto h-12 w-12 text-gray-400 mb-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6m8 0H8"
              />

            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">
              No Open Positions
            </h3>
            <p class="text-gray-600 mb-6">
              We don't have any open positions at the moment, but we're always looking for talented people. 
              Check back soon or reach out to us directly.
            </p>
            <a
              href="/"
              class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition duration-200"
            >
              Back to Home
            </a>
          </div>
        </div>
      @endif
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="col-span-1 md:col-span-2">
            <h3 class="text-2xl font-bold mb-4">
              TechVision Solutions
            </h3>
            <p class="text-gray-300 mb-4">
              Building tomorrow's technology today. Join us in creating innovative solutions 
