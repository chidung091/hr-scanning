{
  "name": "japanese-learning-quiz",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "description": "Interactive Japanese character learning application with Hiragana and Katakana quizzes",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "migration:run": "node ace migration:run",
    "migration:rollback": "node ace migration:rollback --batch=0",
    "migration:rollback-step": "node ace migration:rollback",
    "migration:reset": "node ace migration:reset",
    "migration:status": "node ace migration:status"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#utils/*": "./app/utils/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "1.13.4",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.18",
    "@types/pdf-parse": "^1.1.5",
    "@types/sinon": "^17.0.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "eslint": "^9.33.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9",
    "vite": "^6.3.5",
    "tailwindcss": "^3.4.13",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21"
  },
  "dependencies": {
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@types/pg": "^8.15.5",
    "adonis-autoswagger": "^3.73.0",
    "edge.js": "^6.3.0",
    "luxon": "^3.7.1",
    "openai": "^5.15.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
